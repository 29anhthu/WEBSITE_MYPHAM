
@{
    ViewBag.Title = "ThongTinCaNhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebBanMyPham.Models.KHACHHANG
<div class="personal-info">
    <h2>Thông tin cá nhân</h2>

    <p><strong>Họ tên:</strong> @Model.HoTen</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Địa chỉ:</strong> @Model.DiachiKH</p>
    <p><strong>Điện thoại:</strong> @Model.DienthoaiKH</p>
    <p><strong>Ngày sinh:</strong> @(Model.Ngaysinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")</p>
    <a href="@Url.Action("CapNhatThongTin")" class="edit-button">Chỉnh sửa thông tin</a>
</div>
<style>

    /* Đặt khung cho phần thông tin cá nhân */
    h2 {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    p {
        font-size: 16px;
        color: #555;
        margin: 10px 0;
        margin-left: 200px;
    }

        /* Tạo kiểu cho các tiêu đề mạnh */
        p strong {
            color: #333;
            font-weight: bold;
            margin-right: 10px;
        }

    /* Căn chỉnh phần thông tin cá nhân */
    .personal-info {
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
        width: 60%;
        margin: 0 auto;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }
    /* Định dạng nút chỉnh sửa thông tin */
    a.edit-button {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        margin-left: 350px;
        background-color: #007bff;
        color: #fff;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        a.edit-button:hover {
            background-color: #0056b3;
        }
</style>

