@using WebBanMyPham.Models
@model List<GioHang>

<style>
    .main-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .content-container {
        display: flex;
        justify-content: space-between;
        gap: 20px;
        margin-top: 30px;
    }

    .product-section {
        flex: 2;
        background: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

    h2 {
        font-size: 22px;
        color: #333;
        font-weight: bold;
        text-align: center;
        margin-bottom: 15px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    .header-row {
        background: #ff7043;
        color: #fff;
        font-size: 16px;
        height: 45px;
    }

    tr, td {
        text-align: center;
        padding: 10px;
        border-bottom: 1px solid #e0e0e0;
    }

    #imggh {
        width: 80px;
        height: 100px;
        object-fit: cover;
        border-radius: 5px;
    }

    /* Button container */
    .button {
        padding: 10px 18px;
        font-size: 14px;
        font-weight: bold;
        border: none;
        border-radius: 25px;
        cursor: pointer;
        text-align: center;
        width: 45%;
        display: inline-block;
        margin: 5px;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Thêm bóng mờ nhẹ */
    }

        /* Button khi hover */
        .button:hover {
            transform: translateY(-3px); /* Tạo hiệu ứng nổi khi hover */
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15); /* Bóng mờ đậm khi hover */
        }

    /* Button PayPal */
    .button-order {
        background: #FF7F50;
        color: white;
        border: 1px solid #FF7F50;
    }

        .button-order:hover {
            background: #FF5722;
            border-color: #FF5722;
        }

    /* Button khi chọn thanh toán khi nhận hàng */
    .button-secondary {
        background: #4CAF50;
        color: white;
        border: 1px solid #4CAF50;
    }

        .button-secondary:hover {
            background: #388E3C;
            border-color: #388E3C;
        }


    .total-section {
        background: #f9f9f9;
        border: 1px solid #4caf50;
        border-radius: 8px;
        padding: 10px;
        text-align: center;
        font-size: 16px;
        width: 100%;
    }

    .order-section {
        flex: 1;
        background: #fafafa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
    }

        .order-section h2 {
            font-size: 22px;
            color: #3f51b5;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

    .order-info td {
        padding: 10px 15px;
        font-size: 14px;
        color: #444;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

        .order-info td:first-child {
            width: 30%;
            font-weight: bold;
        }

        .order-info td:last-child {
            color: #555;
        }

    input[type="date"] {
        padding: 6px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 14px;
        width: 100%;
    }
</style>

<div class="main-container">
    <div class="content-container">
        <div class="product-section">
            <h2>Thông Tin Sản Phẩm</h2>
            <table>
                <tr class="header-row">
                    <td>Tên Sản Phẩm</td>
                    <td>Ảnh</td>
                    <td>Số Lượng</td>
                    <td>Đơn Giá</td>
                    <td>Thành Tiền</td>
                </tr>
                @foreach (var SanPham in Model)
                {
                    <tr>
                        <td>@SanPham.pTenSP</td>
                        <td><img id="imggh" src="~/Upload/image_SP/@SanPham.pAnhbia" alt="@SanPham.pTenSP" /></td>
                        <td>@SanPham.iSoluong</td>
                        <td>@String.Format("{0:#,##0}", SanPham.pDonggia) VNĐ</td>
                        <td>@String.Format("{0:#,##0}", SanPham.dThanhtien) VNĐ</td>
                    </tr>
                }
                <tr>
                    <td colspan="5">
                        <div class="total-section">
                            <div class="total-title">Tổng Tiền:</div>
                            <div class="total-amount">@String.Format("{0:#,##0}", ViewBag.Tongtien) VNĐ</div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td colspan="5">
                        @Html.ActionLink("Trở Về Giỏ Hàng", "GioHang", "Giohang", new { @class = "button button-secondary" })
                    </td>
                </tr>
            </table>
        </div>

        <div class="order-section">
            <h2>Thông Tin Đặt Hàng</h2>
            @{
                KHACHHANG kh = (KHACHHANG)Session["TaiKhoan"];
            }
            <table class="order-info">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true)
                    <tr>
                        <td>Họ tên:</td>
                        <td>@kh.HoTen</td>
                    </tr>
                    <tr>
                        <td>Địa chỉ:</td>
                        <td>@kh.DiachiKH</td>
                    </tr>
                    <tr>
                        <td>Điện thoại:</td>
                        <td>@kh.DienthoaiKH</td>
                    </tr>
                    <tr>
                        <td>Ngày đặt:</td>
                        <td>@DateTime.Now.ToShortDateString()</td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align: center;">
                            <a class="button button-order" href="/Giohang/PaymentWithPayPal">Thanh Toán PayPal</a>
                            <button class="button button-secondary" formaction="ThanhToanKhiNhanHang">Thanh Toán Khi Nhận Hàng</button>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
